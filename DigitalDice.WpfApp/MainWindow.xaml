<Window x:Class="DigitalDice.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalDice.WpfApp"
        mc:Ignorable="d"
        Title="Digital Dice" Height="1000" Width="800">
    <Grid>
        <Canvas x:Name="Matrix" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Height="700" Width="500" Margin="150, 100,0,0"/>
        <Button x:Name="StartButton" Content="Start" Margin="70, 300, 0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="70" Click="StartButton_Click"/>
        <Button x:Name="OnOffButton" Content="On/Off" Margin="70, 100, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="30" Click="OnOffButton_Click"/>
    </Grid>
</Window>
